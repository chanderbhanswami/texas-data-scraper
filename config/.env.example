# Texas Data Scraper Configuration

# =======================
# API KEYS
# =======================

# Socrata API Token (optional - increases rate limit from 1k to 50k requests/hour)
# Get your token at: https://data.texas.gov/profile/edit/developer_settings
SOCRATA_APP_TOKEN=
SOCRATA_SECRET_TOKEN=

SOCRATA_API_KEY_ID=
SOCRATA_API_KEY_SECRET=

# Texas Comptroller API Key (required for full access)
# Get your key at: https://comptroller.texas.gov/transparency/open-data/
COMPTROLLER_API_KEY=

# =======================
# API ENDPOINTS
# =======================

# Socrata Base URL
SOCRATA_BASE_URL=https://data.texas.gov/resource

# Comptroller Base URL
COMPTROLLER_BASE_URL=https://api.comptroller.texas.gov/public-data/v1/public

# =======================
# SOCRATA DATASET IDs
# =======================

# Franchise Tax Permit Holders
SOCRATA_FRANCHISE_TAX_DATASET=9cir-efmm

# Sales Tax Permit Holders
SOCRATA_SALES_TAX_DATASET=jrea-zgmq

# Mixed Beverage Tax Permit Holders
SOCRATA_MIXED_BEVERAGE_DATASET=quub-uptv

# State Tax Registrations
SOCRATA_TAX_REGISTRATIONS_DATASET=a5y7-t5ih

# Add more dataset IDs as needed
SOCRATA_ADDITIONAL_DATASETS=

# =======================
# RATE LIMITING
# =======================

# Socrata rate limits (requests per hour)
SOCRATA_RATE_LIMIT_NO_TOKEN=1000
SOCRATA_RATE_LIMIT_WITH_TOKEN=10000

# Comptroller rate limits (requests per minute)
COMPTROLLER_RATE_LIMIT=100

# Comptroller batch processing settings
COMPTROLLER_CONCURRENT_REQUESTS=2
COMPTROLLER_CHUNK_SIZE=25
COMPTROLLER_REQUEST_DELAY=1.5

# Request delays (seconds)
REQUEST_DELAY=0.1
RETRY_DELAY=5

# Max retries on failure
MAX_RETRIES=3

# =======================
# BATCH PROCESSING
# =======================

# Batch size for processing taxpayer IDs
BATCH_SIZE=50000

# Concurrent requests (be careful not to exceed rate limits)
CONCURRENT_REQUESTS=5

# =======================
# GPU SETTINGS
# =======================

# Enable GPU acceleration (true/false)
USE_GPU=true

# GPU device ID (0 for first GPU, 1 for second, etc.)
GPU_DEVICE_ID=0

# GPU memory limit (MB) - adjust based on your RTX 3060 (typically 12GB)
GPU_MEMORY_LIMIT=5120

# =======================
# EXPORT SETTINGS
# =======================

# Export directory
EXPORT_DIR=exports

# Export formats (comma-separated: json,csv,excel)
EXPORT_FORMATS=json,csv,excel

# Compression (true/false)
COMPRESS_EXPORTS=false

# =======================
# LOGGING
# =======================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log directory
LOG_DIR=logs

# Log file rotation (MB)
LOG_MAX_SIZE=100

# Log file backup count
LOG_BACKUP_COUNT=5

# =======================
# DATA PROCESSING
# =======================

# Deduplication strategy (taxpayer_id, exact, fuzzy)
DEDUP_STRATEGY=taxpayer_id

# Field priority for conflicts (comptroller/socrata)
FIELD_PRIORITY=comptroller

# Data validation (true/false)
VALIDATE_DATA=true

# =======================
# PERFORMANCE
# =======================

# Enable caching (true/false)
ENABLE_CACHE=true

# Cache directory
CACHE_DIR=.cache

# Cache expiry (hours)
CACHE_EXPIRY=24

# =======================
# ADVANCED SETTINGS
# =======================

# Timeout for API requests (seconds)
REQUEST_TIMEOUT=30

# User agent for requests
USER_AGENT=Texas-Data-Scraper/1.0

# Verify SSL certificates (true/false)
VERIFY_SSL=true

# Debug mode (true/false) - enables verbose logging
DEBUG_MODE=false